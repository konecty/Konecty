<!DOCTYPE html>
<html lang="{{locale}}">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="application-name" content="Konecty" />
		<meta name="description" content="Konecty" />
		<meta name="google" content="notranslate" />
		<meta name="apple-mobile-web-app-capable" content="yes" />
		<meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
		<title>Konecty - {{title_login_page}}</title>
		<link rel="shortcut icon" href="//{{uiServer}}/favicon.ico" sizes="16x16" type="image/x-icon" />
		<link rel="icon" href="//{{uiServer}}/resources/images/logo/16x16.png" sizes="16x16" type="image/png" />
		<link rel="icon" href="//{{uiServer}}/resources/images/logo/icon.svg" sizes="any" type="image/svg+xml" />
		{{#if collectFingerprint}}
			<script src="https://openfpcdn.io/fingerprintjs/v4/iife.min.js"></script>
			<script src="/fp.js"></script>
		{{/if}}
		<script src="https://cdn.jsdelivr.net/npm/libphonenumber-js@1.11.0/bundle/libphonenumber-js.min.js" defer onerror="console.error('Failed to load libphonenumber-js from CDN')"></script>
		<script src="/login-country-codes.js" defer></script>
		<style>
			/* Tailwind CSS will be injected here during build */
			{{cssContent}}
		</style>
	</head>
	<body class="bg-gray-50 min-h-screen flex items-center justify-center p-4">
		<!-- Browser Compatibility Check -->
		<div id="compatible-panel" class="hidden fixed inset-0 bg-white z-50 flex items-center justify-center">
			<div class="max-w-md mx-auto text-center px-6">
				<h2 class="text-2xl font-bold text-gray-900 mb-4">{{lbl_browser_incompatible}}</h2>
				<p class="text-gray-600 mb-6">{{lbl_browser_install}}</p>
				<div class="flex justify-center gap-4">
					<a href="https://www.google.com/intl/en/chrome/browser" target="_blank" class="flex flex-col items-center">
						<img src="//{{uiServer}}/resources/login/images/chrome.jpg" alt="Chrome" class="w-20 h-20 rounded-lg mb-2" />
						<span class="text-sm text-gray-700">Chrome</span>
					</a>
					<a href="http://getfirefox.com" target="_blank" class="flex flex-col items-center">
						<img src="//{{uiServer}}/resources/login/images/firefox.jpg" alt="Firefox" class="w-20 h-20 rounded-lg mb-2" />
						<span class="text-sm text-gray-700">Firefox</span>
					</a>
					<a href="http://www.apple.com/safari/" target="_blank" class="flex flex-col items-center">
						<img src="//{{uiServer}}/resources/login/images/safari.jpg" alt="Safari" class="w-20 h-20 rounded-lg mb-2" />
						<span class="text-sm text-gray-700">Safari</span>
					</a>
				</div>
			</div>
		</div>

		<!-- Loading Panel -->
		<div id="loading-panel" class="hidden fixed inset-0 bg-white bg-opacity-90 z-40 flex items-center justify-center">
			<div class="text-center">
				<div class="inline-block animate-spin rounded-full h-12 w-12 border-t-2 border-b-2 border-blue-600 mb-4"></div>
				<p class="text-gray-700">{{lbl_loading}}</p>
			</div>
		</div>

		<!-- Main Container -->
		<div class="w-full max-w-md">
			<!-- Logo -->
			<div class="text-center mb-8">
				<img src="//{{uiServer}}/resources/login/images/logo.png" alt="Konecty" class="h-12 mx-auto" />
			</div>

			<!-- Login Panel (Traditional) -->
			<div id="login-panel" class="bg-white rounded-2xl shadow-xl p-8">
				<h2 class="text-2xl font-bold text-gray-900 mb-6 text-center">{{title_login_page}}</h2>
				<form id="login-form">
					<div class="mb-4">
						<label for="login-user" class="block text-sm font-medium text-gray-700 mb-2">{{lbl_login}}</label>
						<input
							type="text"
							id="login-user"
							name="user"
							class="w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:ring-4 focus:ring-blue-500/20 focus:border-blue-500 outline-none transition-all"
							placeholder="{{lbl_login}}"
							required
						/>
					</div>
					<div class="mb-4">
						<label for="login-password" class="block text-sm font-medium text-gray-700 mb-2">{{lbl_password}}</label>
						<input
							type="password"
							id="login-password"
							name="password"
							class="w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:ring-4 focus:ring-blue-500/20 focus:border-blue-500 outline-none transition-all"
							placeholder="{{lbl_password}}"
							required
						/>
					</div>
					<div id="login-error" class="hidden mb-4 p-3 bg-red-50 border-2 border-red-200 rounded-xl text-red-700 text-sm"></div>
					<div class="flex items-center justify-between mb-6">
						<a href="#" id="forgot-password-link" class="text-sm text-blue-600 hover:text-blue-800 transition-colors">{{btn_forget}}</a>
						<button
							type="submit"
							class="px-6 py-3 bg-blue-600 text-white rounded-xl hover:bg-blue-700 focus:outline-none focus:ring-4 focus:ring-blue-500/20 transition-all font-semibold"
						>
							{{btn_login}}
						</button>
					</div>
				</form>

				<!-- OTP Login Options -->
				{{#if (or emailEnabled whatsappEnabled)}}
					<div class="border-t border-gray-200 pt-6 mt-6">
						<p class="text-sm text-gray-600 text-center mb-4">{{lbl_or_login_with}}</p>
						<div class="flex gap-3 justify-center">
							{{#if emailEnabled}}
								<button
									id="open-email-otp-modal"
									type="button"
									class="flex items-center justify-center gap-2 px-6 py-3 bg-white border-2 border-gray-300 rounded-xl hover:border-blue-500 hover:bg-blue-50 transition-all focus:outline-none focus:ring-4 focus:ring-blue-500/20"
								>
									<svg class="h-5 w-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
									</svg>
									<span class="text-sm font-medium text-gray-700">{{lbl_receive_code_email}}</span>
								</button>
							{{/if}}
							{{#if whatsappEnabled}}
								<button
									id="open-whatsapp-otp-modal"
									type="button"
									class="flex items-center justify-center gap-2 px-6 py-3 bg-white border-2 border-gray-300 rounded-xl hover:border-green-500 hover:bg-green-50 transition-all focus:outline-none focus:ring-4 focus:ring-green-500/20"
								>
									<svg class="h-5 w-5 text-gray-600" fill="currentColor" viewBox="0 0 24 24">
										<path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
									</svg>
									<span class="text-sm font-medium text-gray-700">{{lbl_quick_login}}</span>
								</button>
							{{/if}}
						</div>
					</div>
				{{/if}}
			</div>

			<!-- Reset Password Panel -->
			<div id="reset-panel" class="hidden bg-white rounded-2xl shadow-xl p-8">
				<h2 class="text-2xl font-bold text-gray-900 mb-4 text-center">{{btn_reset}}</h2>
				<p class="text-sm text-gray-600 mb-6">{{help_reset}}</p>
				<form id="reset-form">
					<div class="mb-4">
						<label for="reset-user" class="block text-sm font-medium text-gray-700 mb-2">{{lbl_login}}</label>
						<input
							type="text"
							id="reset-user"
							name="user"
							class="w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:ring-4 focus:ring-blue-500/20 focus:border-blue-500 outline-none transition-all"
							placeholder="{{lbl_login}}"
							required
						/>
					</div>
					<div id="reset-error" class="hidden mb-4 p-3 bg-red-50 border-2 border-red-200 rounded-xl text-red-700 text-sm"></div>
					<div class="flex items-center justify-between">
						<a href="#" id="cancel-reset-link" class="text-sm text-blue-600 hover:text-blue-800 transition-colors">{{btn_cancel_back}}</a>
						<button
							type="submit"
							class="px-6 py-3 bg-red-600 text-white rounded-xl hover:bg-red-700 focus:outline-none focus:ring-4 focus:ring-red-500/20 transition-all font-semibold"
						>
							{{btn_reset}}
						</button>
					</div>
				</form>
			</div>

			<!-- Reset Password Success Panel -->
			<div id="reset-success-panel" class="hidden bg-white rounded-2xl shadow-xl p-8">
				<div class="text-center">
					<div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-green-100 mb-4">
						<svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
						</svg>
					</div>
					<p class="text-lg font-medium text-gray-900">{{lbl_password_sent}}</p>
				</div>
			</div>
		</div>

		<!-- Email OTP Modal -->
		{{#if emailEnabled}}
			<div id="email-otp-modal" class="hidden fixed inset-0 z-50 flex items-center justify-center p-4">
				<div class="absolute inset-0 bg-black/60 backdrop-blur-sm" id="email-otp-modal-backdrop"></div>
				<div class="relative bg-white rounded-2xl shadow-2xl w-full max-w-md">
					<div class="p-8">
						<div class="flex justify-center mb-6">
							<div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl flex items-center justify-center shadow-lg">
								<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
								</svg>
							</div>
						</div>
						<h2 class="text-3xl font-bold text-gray-900 text-center mb-3">{{lbl_receive_code_email}}</h2>
						<p class="text-gray-600 text-center mb-8">{{help_otp_email}}</p>
						<form id="otp-email-form">
							<div class="mb-4">
								<label for="otp-email" class="block text-sm font-semibold text-gray-700 mb-2">{{lbl_email}}</label>
								<input
									type="email"
									id="otp-email"
									name="email"
									class="w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:border-blue-500 focus:ring-4 focus:ring-blue-500/20 transition-all outline-none text-lg"
									placeholder="{{lbl_email}}"
									required
								/>
							</div>
							<div id="otp-email-error" class="hidden mb-4 p-3 bg-red-50 border-2 border-red-200 rounded-xl text-red-700 text-sm"></div>
							<button
								type="submit"
								class="w-full bg-gradient-to-r from-blue-500 to-blue-600 text-white py-4 rounded-xl font-semibold text-lg hover:from-blue-600 hover:to-blue-700 focus:outline-none focus:ring-4 focus:ring-blue-500/20 transition-all transform hover:scale-[1.02] active:scale-[0.98] shadow-lg hover:shadow-xl flex items-center justify-center gap-2"
							>
								{{btn_receive_code}}
							</button>
						</form>
						<!-- OTP Verification Form (Email) -->
						<div id="otp-verify-email-panel" class="hidden mt-6 pt-6 border-t border-gray-200">
							<p class="text-sm text-gray-600 mb-4 text-center">{{lbl_otp_sent_email}}</p>
							<form id="otp-verify-email-form">
								<div class="mb-4">
									<label for="otp-code-email" class="block text-sm font-semibold text-gray-700 mb-2">{{lbl_otp_code}}</label>
									<input
										type="text"
										id="otp-code-email"
										name="otpCode"
										class="w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:border-blue-500 focus:ring-4 focus:ring-blue-500/20 outline-none text-center text-3xl tracking-widest font-mono"
										placeholder="000000"
										maxlength="6"
										pattern="[0-9]{6}"
										required
									/>
								</div>
								<div id="otp-verify-email-error" class="hidden mb-4 p-3 bg-red-50 border-2 border-red-200 rounded-xl text-red-700 text-sm"></div>
								<button
									type="submit"
									class="w-full bg-gradient-to-r from-green-500 to-green-600 text-white py-4 rounded-xl font-semibold text-lg hover:from-green-600 hover:to-green-700 focus:outline-none focus:ring-4 focus:ring-green-500/20 transition-all transform hover:scale-[1.02] active:scale-[0.98] shadow-lg hover:shadow-xl"
								>
									{{btn_verify_code}}
								</button>
							</form>
						</div>
						<button
							id="close-email-otp-modal"
							class="absolute top-4 right-4 p-2 text-gray-400 hover:text-gray-600 hover:bg-gray-100 rounded-lg transition-colors"
						>
							<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
							</svg>
						</button>
					</div>
				</div>
			</div>
		{{/if}}

		<!-- WhatsApp OTP Modal -->
		{{#if whatsappEnabled}}
			<div id="whatsapp-otp-modal" class="hidden fixed inset-0 z-50 flex items-center justify-center p-4">
				<div class="absolute inset-0 bg-black/60 backdrop-blur-sm" id="whatsapp-otp-modal-backdrop"></div>
				<div class="relative bg-white rounded-2xl shadow-2xl w-full max-w-md">
					<div class="p-8">
						<div class="flex justify-center mb-6">
							<div class="w-16 h-16 bg-gradient-to-br from-green-400 to-green-600 rounded-2xl flex items-center justify-center shadow-lg">
								<svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
									<path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
								</svg>
							</div>
						</div>
						<h2 class="text-3xl font-bold text-gray-900 text-center mb-3">{{lbl_quick_login}}</h2>
						<p class="text-gray-600 text-center mb-8">{{help_otp_whatsapp}}</p>
						<form id="otp-phone-form">
							<div class="mb-4">
								<label for="otp-phone" class="block text-sm font-semibold text-gray-700 mb-2">{{lbl_phone}}</label>
								<div class="flex rounded-xl border-2 border-gray-300 focus-within:border-green-500 focus-within:ring-4 focus-within:ring-green-500/20 transition-all">
									<select
										id="otp-phone-country"
										name="countryCode"
										class="px-3 py-3 border-0 rounded-l-xl focus:outline-none text-lg bg-gray-50 cursor-pointer"
										data-default-country="{{defaultCountry}}"
										required
									>
									</select>
									<input
										type="tel"
										id="otp-phone"
										name="phoneNumber"
										class="flex-1 px-4 py-3 border-0 rounded-r-xl focus:outline-none text-lg"
										placeholder="11999999999"
										required
									/>
								</div>
							</div>
							<div id="otp-phone-error" class="hidden mb-4 p-3 bg-red-50 border-2 border-red-200 rounded-xl text-red-700 text-sm"></div>
							<button
								type="submit"
								class="w-full bg-gradient-to-r from-green-500 to-green-600 text-white py-4 rounded-xl font-semibold text-lg hover:from-green-600 hover:to-green-700 focus:outline-none focus:ring-4 focus:ring-green-500/20 transition-all transform hover:scale-[1.02] active:scale-[0.98] shadow-lg hover:shadow-xl flex items-center justify-center gap-2"
							>
								{{btn_receive_code}}
							</button>
						</form>
						<!-- OTP Verification Form (Phone) -->
						<div id="otp-verify-phone-panel" class="hidden mt-6 pt-6 border-t border-gray-200">
							<p class="text-sm text-gray-600 mb-4 text-center">{{lbl_otp_sent_whatsapp}}</p>
							<form id="otp-verify-phone-form">
								<div class="mb-4">
									<label for="otp-code-phone" class="block text-sm font-semibold text-gray-700 mb-2">{{lbl_otp_code}}</label>
									<input
										type="text"
										id="otp-code-phone"
										name="otpCode"
										class="w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:border-green-500 focus:ring-4 focus:ring-green-500/20 outline-none text-center text-3xl tracking-widest font-mono"
										placeholder="000000"
										maxlength="6"
										pattern="[0-9]{6}"
										required
									/>
								</div>
								<div id="otp-verify-phone-error" class="hidden mb-4 p-3 bg-red-50 border-2 border-red-200 rounded-xl text-red-700 text-sm"></div>
								<button
									type="submit"
									class="w-full bg-gradient-to-r from-green-500 to-green-600 text-white py-4 rounded-xl font-semibold text-lg hover:from-green-600 hover:to-green-700 focus:outline-none focus:ring-4 focus:ring-green-500/20 transition-all transform hover:scale-[1.02] active:scale-[0.98] shadow-lg hover:shadow-xl"
								>
									{{btn_verify_code}}
								</button>
							</form>
						</div>
						<button
							id="close-whatsapp-otp-modal"
							class="absolute top-4 right-4 p-2 text-gray-400 hover:text-gray-600 hover:bg-gray-100 rounded-lg transition-colors"
						>
							<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
							</svg>
						</button>
					</div>
				</div>
			</div>
		{{/if}}

		<input type="hidden" id="namespace" value="{{namespace}}" />
		<script src="/login-modern.js"></script>
	</body>
</html>
